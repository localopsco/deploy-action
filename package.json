{
  "name": "localops-deploy",
  "description": "GitHub Actions TypeScript template",
  "version": "0.1.0",
  "author": "LocalOps",
  "type": "module",
  "private": true,
  "homepage": "https://github.com/localopsco/deploy-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/localopsco/deploy-action.git"
  },
  "bugs": {
    "url": "https://github.com/localopsco/deploy-action/issues"
  },
  "keywords": [
    "actions",
    "localops",
    "deliver",
    "deploy"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "vitest run",
    "coverage": "vitest run --coverage",
    "format:write": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "oxlint .",
    "local-action": "npx @github/local-action . src/main.ts .env",
    "package": "rimraf ./dist && rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "package:watch": "npm run package -- --watch",
    "test": "vitest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package",
    "prepare": "husky"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^2.0.2",
    "ky": "^1.14.2"
  },
  "devDependencies": {
    "@github/local-action": "^6.0.2",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^24.10.7",
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "make-coverage-badge": "^1.2.0",
    "oxlint": "^1.42.0",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "rollup": "^4.57.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
